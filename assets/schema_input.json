{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/ferlab/cnvcluster/master/assets/schema_input.json",
    "title": "ferlab/cnvcluster pipeline - params.input schema",
    "description": "Schema for the file provided with params.input",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "sample": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "Sample ID must be provided and cannot contain spaces",
                "meta": ["sample"]
                
            },
            "familyId": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "familyId must be provided and cannot contain spaces",
                "meta": ["familyId"]
                
            },
            "vcf": {
                "errorMessage": "VCF file for cannot contain spaces and must have extension '.vcf' or '.vcf.gz'",
                "anyOf": [
                    {
                        "type": "string",
                        "pattern": "^\\S+\\.vcf(\\.gz)?$"
                    },
                    {
                        "type": "string",
                        "maxLength": 0
                    }
                ],
                "format": "file-path",
                "exists": true
            }
        },
        "required": ["familyId","sample"]
    }
}